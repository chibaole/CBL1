<%= form_for @_resource, as: @__resource_name, url: delegate_form_url(@_resource), method: delegate_form_method(@_resource), html: {class: 'ui form'} do |f| %>
  <%= f.submit 'OK', class: 'ui small primary button' %>
  <div class="ui divider"></div>
  
  <div class="field">
    <%= f.label :name, '项目名称' %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :product_ids, '产品' %>
    <%= f.select :product_ids, options_for_select(Product.all.map{|p| [p.name, p.id]}, @_resource.product_ids), {}, multiple: true, class: 'ui dropdown' %>
  </div>

  <div class="field">
    <%= f.label :started_at, '项目开始日期' %>
    <%= f.text_field :started_at, class: 'datepicker'%>
  </div>

  <div class="field">
    <%= f.label :expired_at, '项目过期时间' %>
    <%= f.text_field :expired_at, class: 'datepicker'%>
  </div>

  <div class="field">
    <%= f.label :start_delivery_at, '预约配送开始' %>
    <%= f.text_field :start_delivery_at, class: 'datepicker'%>
  </div>

  <div class="field">
    <%= f.label :state, '项目状态' %>
    <%= delegate_form_field_tag(f, @_resource, 'state')%>
  </div>

  <div class="field">
    <%= f.label :message_template, '短信内容模版' %>
    <%= f.text_area :message_template %>
  </div>

  <%= f.submit 'OK', class: 'ui small primary button' %>
<% end %>
